<h1>Books</h1>

<!--データ挿入テーブル-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colospan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, 'data-confirm' => 'Are you sure？' %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<% if @book.errors.any? %>
<p class="validates">
  <%= @book.errors.count %>error.</br>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
</p>
<% end %>


<!--新規投稿-->
<h2>New book</h2>
<!--form_with-->
<%= form_with model:@book, local:true do |f| %>

<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
</div>

<% end %>
