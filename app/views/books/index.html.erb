<h1>Books</h1>

<!--データ挿入テーブル-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colospan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to “Show”, book_path(book.id) %></td>
      <td><%= link_to “edit”, book_path %></td>
      <td><%= link_to “destroy”, book_path %></td>


    </tr>
    <% end %>
  </tbody>
</table>



<!--新規投稿-->
<h2>New book</h2>
<!--form_with-->
<%= form_with model:@book, local:true do |f| %>

<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
</div>

<% end %>
