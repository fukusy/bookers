<h2>New book</h2>
<!--form_with-->
<%= form_with model:@book, url: '/books/create', local:true do |f| %>

<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label for="book_body">Body</label>
